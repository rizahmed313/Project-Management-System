<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Due_Date_When_Complete</fullName>
    <active>true</active>
    <description>Require Due Date when marking ToDo complete</description>
    <errorConditionFormula>AND(Is_Complete__c = TRUE, ISBLANK(Due_Date__c))</errorConditionFormula>
    <errorDisplayField>Due_Date__c</errorDisplayField>
    <errorMessage>Provide Due Date when marking task complete.</errorMessage>
</ValidationRule>
